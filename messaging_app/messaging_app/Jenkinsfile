pipeline {
    agent {
        docker {
            image 'python:3.10'
        }
    }

    environment {
        GITHUB_CREDENTIALS = credentials('github-credentials-id')
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repository..."
                git branch: 'main',
                    url: 'https://github.com/Masterpitan/alx-backend-python.git',
                    credentialsId: "${GITHUB_CREDENTIALS}"
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies from messaging_app/requirements.txt..."
                sh '''
                    pip3 install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt
                    pip3 install pytest pytest-html
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running pytest inside container..."
                sh '''
                    pytest messaging_app --junitxml=report.xml --html=report.html || true
                '''
            }
        }

        stage('Publish Reports') {
            steps {
                junit 'report.xml'
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',
                    reportFiles: 'report.html',
                    reportName: 'Pytest HTML Report'
                ])
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}
